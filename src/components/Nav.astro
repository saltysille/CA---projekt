}



.search{
    height: 20px;
    width: 20px;
    border-radius: 0;
} 




.logo img {
height: 200px;
width: 200px;
margin-left: -3rem;
padding: 1rem;
margin-top: 3rem;
}

.mitca{
    height: 100px;
    width: 157px;
    margin-top: -2.4rem;
}

nav {
    display: flex;
    align-items: center;
    margin-right: 3rem;
    
    
}

.menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
}

.menu li {
    margin-right: 0;
}

.menu li:last-child {
    margin-right: 0;
}

.menu a {
    display: block;
    padding: 10px;
    color: #0f0e0e;
    text-decoration: none;
    transition: color 0.3s;
    font-size: 18px;
    padding: 30px;
    margin-top: 80px;
    
}


.burger {
    width: 30px;
    height: 20px;
    cursor: pointer;
}

.burger .line {
    width: 100%;
    height: 2px;
    background-color: #333;
    margin-bottom: 5px;
}

.burger {
    display: none;
    margin-right: 50px;
}

@media screen and (max-width: 800px) {

   
    .logo img {
height: 150px;
width: 150px;
margin-left: 0;
margin-top: 0;

    }

    .menu_logo{
    height: 25px;
    width: 100px;
    margin: 0;
   
}

nav {
    margin-right: 0;
}


    .menu {
        display: none;
    }


    .menu a{
        padding: 1px;
    }


    .burger {
        display: block;
    }

    .burger.active .line:nth-child(1) {
        transform: rotate(45deg) translate(5px, 5px);
    }

    .burger.active .line:nth-child(2) {
        opacity: 0;
    }

    .burger.active .line:nth-child(3) {
        transform: rotate(-45deg) translate(5px, -5px);
      }

    

    nav.active .menu {
        display: block;
        background-color: #FFFF;
        position: absolute;
        top: 60px;
        left: 0;
        width: 100%;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        z-index: 1;
        text-align: end;
    
    }



    nav.active .menu li {
        margin: 10px 20px;
    }

    nav.active .menu a {
        font-size: 24px;
    }

    

    
}

@media screen and (min-width: 1440px) {

    .menu_logo{
    height: 25px;
    width: 100px;
    margin: 0;
}
    .menu a {
        font-size: 18px;
    }

    .logo img {
height: 400px;
width: 400px;
padding: 7rem;


}
}

</style>

<script>
    const burger = document.querySelector(".burger");
const nav = document.querySelector("nav");
const menu = document.querySelector(".menu");
const links = document.querySelectorAll(".menu li a");

burger.addEventListener("click", () => {
  burger.classList.toggle("active");
  nav.classList.toggle("active");
});

links.forEach((link) => {
  link.addEventListener("click", () => {
    burger.classList.remove("active");
    nav.classList.remove("active");
  });
});

</script> 